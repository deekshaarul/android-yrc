<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:id="@+id/relative"
    android:orientation="horizontal"
    android:padding="5dip"
    android:background="@drawable/rectangle_border">


        <TextView
        android:id="@+id/pat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Patient: "
        android:layout_marginTop="5dip"
        android:textColor="#343434"
        android:textSize="12sp" />

        <TextView
        android:id="@+id/pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pat"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignTop="@+id/pat"
        android:layout_alignBottom="@+id/pat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Ph No: "
            android:textColor="#343434"
            android:textSize="12sp"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
        android:id="@+id/no"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:layout_alignBottom="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Units: "
            android:textColor="#343434"
            android:textSize="12sp"
            android:id="@+id/textView3"

            android:layout_alignBottom="@+id/t"
            android:layout_alignLeft="@+id/g"
            android:layout_alignStart="@+id/g" />

        <TextView
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"

            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Type: "
            android:textColor="#343434"
            android:textSize="12sp"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/no"
            android:layout_centerHorizontal="true" />

        <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"

            android:layout_alignBottom="@+id/textView4"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Blood Group: "
            android:textColor="#343434"
            android:textSize="12sp"

            android:id="@+id/textView6"
            android:layout_alignTop="@+id/pn"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
            android:layout_toRightOf="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"

            android:layout_alignRight="@+id/ldate"
            android:layout_alignEnd="@+id/ldate" />

        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handled By: "
            android:textColor="#343434"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
        android:id="@+id/hn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"

        android:layout_alignBottom="@+id/by"
        android:layout_toRightOf="@+id/by"
        android:layout_toEndOf="@+id/by" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Date: "
            android:textColor="#343434"
            android:textSize="12sp"
            android:id="@+id/textView2"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

        <TextView
        android:id="@+id/ldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    </RelativeLayout>






